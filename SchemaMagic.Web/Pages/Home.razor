@page "/"

<PageTitle>SchemaMagic - Interactive EF Core Schema Visualizer</PageTitle>

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4 text-white">
                    <i class="bi bi-magic"></i> SchemaMagic
                </h1>
                <p class="lead text-white mb-4">
                    Interactive Entity Framework Core Schema Visualizer
                </p>
                <p class="text-white-50 mb-4">
                    Analyze GitHub repositories to find DbContext files and generate beautiful, 
                    interactive schema diagrams directly in your browser.
                </p>
                <a href="/analyze" class="btn btn-light btn-lg">
                    <i class="bi bi-search me-2"></i>Analyze Repository
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <div class="schema-preview p-5">
                    <i class="bi bi-diagram-3 display-1 text-white opacity-75"></i>
                    <p class="mt-4 text-white-50 mb-0 fs-5">Interactive Schema Diagrams</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">
                <i class="bi bi-rocket-takeoff"></i> Key Features
            </h2>
            <p class="lead text-muted">Everything you need for database schema visualization</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-4">
                            <i class="bi bi-github"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">GitHub Integration</h5>
                        <p class="card-text text-muted">
                            Connect to any public GitHub repository and automatically discover DbContext files.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-4">
                            <i class="bi bi-diagram-2"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Interactive Diagrams</h5>
                        <p class="card-text text-muted">
                            Drag tables, zoom, pan, and explore relationships in beautiful SVG-rendered schemas.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-4">
                            <i class="bi bi-lightning-charge"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Real-time Analysis</h5>
                        <p class="card-text text-muted">
                            Instant schema generation using Roslyn parsing - no compilation required.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-4">
                            <i class="bi bi-palette"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Professional Styling</h5>
                        <p class="card-text text-muted">
                            Beautiful, responsive designs with hover effects and modern UI components.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-4">
                            <i class="bi bi-phone"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Mobile Friendly</h5>
                        <p class="card-text text-muted">
                            Works seamlessly on desktop, tablet, and mobile devices.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-4">
                            <i class="bi bi-download"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Export & Share</h5>
                        <p class="card-text text-muted">
                            Download interactive HTML files or share links to generated schemas.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">
                <i class="bi bi-lightbulb"></i> How It Works
            </h2>
            <p class="lead text-muted">Get started in three simple steps</p>
        </div>
        
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="step-number mx-auto mb-3">1</div>
                    <h5 class="fw-bold mb-2">Enter Repository URL</h5>
                    <p class="text-muted">Paste any public GitHub repository URL</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="step-number mx-auto mb-3">2</div>
                    <h5 class="fw-bold mb-2">Discover DbContext</h5>
                    <p class="text-muted">Automatically find Entity Framework files</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="step-number mx-auto mb-3">3</div>
                    <h5 class="fw-bold mb-2">Generate Schema</h5>
                    <p class="text-muted">Create beautiful interactive diagrams</p>
                </div>
            </div>
        </div>
    </div>
</section>